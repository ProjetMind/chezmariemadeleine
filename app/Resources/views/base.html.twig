{# empty Twig template #}

<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="fr">
    <head>
        <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
        
        {% block block_title_header %}        
            <title>
                    {% block title %}Chez Marie Madeleine {% endblock %}
            </title>
        {% endblock %}
            
            <link rel="shortcut icon" href="{{ asset('favicon.ico')}}" type="image/x-icon" />    
        
        {% block script_css %}
        {% endblock script_css %}
            
        {# CSS Resources #}    
        {% stylesheets 
                filter='?lessphp, ?yui_css, cssrewrite'
                "../web/css/style.css"
                "../web/css/nav_header.css"
                "../web/css/bootstrap.css"
                "../src/Cmm/SiteBundle/Resources/public/css/*.css"
                "../src/Cmm/UserBundle/Resources/public/css/*.css"
                "../web/css/jquery-ui-1.10.4.css"
            
                output='css/style.css'
        %}    
                <link rel="stylesheet" href="{{ asset_url }}" type="text/css" />
         {% endstylesheets %}    
                
         {# Javascript Resources #}       
         {% javascripts 
                filter='?yui_js'
                "../vendor/jquery/jquery/jquery-1.10.2.js"
                "../web/js/jquery-ui-1.10.4.min.js"
                "../web/js/bootstrap.js"
                "bundles/fosjsrouting/js/router.js"
                "js/fos_js_routes.js"
                "../src/Cmm/SiteBundle/Resources/public/js/*.js"
                "../src/Cmm/UserBundle/Resources/public/js/*.js"
                output='js/script_js.js'
            %}
                <script type="text/javascript" src="{{ asset_url }}"></script>   
         {% endjavascripts %}       
           
        
                
                
         {% block script_js %}
                
        {% endblock script_js %}
                
    </head>
    
    <body>  
        <div class="container row-fluid">
            <span class="span8 offset2">
                
                
                {# BLOCK HEADER #}
                {% block block_header %}
                <span id="header" class="row">
                    <span class="span8 offset2">
                        {% block site_name %}
                        <img alt="logo site" src="{{ asset('Resources/logo.png') }}" />
                        <a id="nomSite" href="{{ path('cmm_site_homepage') }}" title="Accueil - Chez Marie Madeleine">Chez Marie Madelaine</a>
                        <p>CrÃªperie Traditionnelle</p>
                        <address>160 rue Saint-Martin - 75003 - +330612884698</address>
                        {% endblock site_name %}
                    </span>
                </span>
                {% endblock block_header %}
        
                
                <span class="row">
                    {# BLOCK BODY #}
                    
                    <span id="corpsSite" class="row"> 
                        {% include '::nav_header.html.twig' %}
                        <div class="row">
                            <span class="span8">
                    {% block corps_site %}
                    
                        {### NAVIGATION ###}
                        {% block block_navigation %}
                        <span class="row">
                            {% block nav %}
                                navigation
                            {% endblock nav %}
                        </span>
                        {% endblock block_navigation %}
                        {### FIN NAVIGATION ###}

                        {### TITRE DE LA PAGE ###}
                        {% block block_title %}
                        <span class="row">
                            <span class="span12">
                                <h3 id="titlePage">
                                    {% block title_page %}
                                        titre page
                                    {% endblock title_page %}
                                </h3>
                            </span>
                        </span>
                        {% endblock block_title %}
                        {### FIN TITRE DE LA PAGE ###}

                        {### DESCRIPTION DE LA PAGE ###}
                        {% block block_description %}
                        <p id="descriptionPage" class="">
                        {% block description_page %}
                            desription page
                        {% endblock description_page %}
                        </p>
                        {% endblock block_description %}
                        {### FIN DESCRIPTION DE LA PAGE ###}

                        {### CONTENU DE LA PAGE ###}
                        {% block block_contenu %}
                            {% block contenu_page %}
                                contenu page
                            {% endblock contenu_page %}
                        {% endblock block_contenu %}
                        {### FIN CONTENU DE LA PAGE ###}
                    
                
                        {% endblock corps_site %}
                            </span>
                            <span class="span4">
                                {% block block_menu_droit %}
                                    menu droit
                                {% endblock block_menu_droit %}
                            </span>
                        </div>
                    </span>
                    
                    
                </span>
                
        {# BLOCK MENU DROIT #}
        
                
                
            </span>
        </div>
    </body>
</html>
